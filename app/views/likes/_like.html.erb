<%= turbo_frame_tag dom_id(note, :like) do %>
<% if user_signed_in? && note.liked_by?(current_user) %>
    <%= link_to "♥", note_likes_path(note), data: { turbo_method: :delete }, class: :note__btn__heart2, remote: true %>
<% else %>
    <%= link_to "♥", note_likes_path(note), data: { turbo_method: :post }, class: :note__btn__heart, remote: true %>
<% end %>
<%end%>