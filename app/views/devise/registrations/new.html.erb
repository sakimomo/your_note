<div class="main">
  <div class="inner">
    <div class="form__wrapper">
      <h2 class="page-heading"> New account</h2>

       <%= form_with model: @user, url: user_registration_path , local: true do |f| %>
       <%= render "devise/shared/error_messages", resource: resource %>


        <div class="field">
          <%= f.label :name, "Name" %><br />
          <%= f.text_field :name, id: "user_name" %>
        </div>

        <div class="field">
          <%= f.label :email, "Email" %><br />
          <%= f.email_field :email, id: "user_email", autofocus: true, autocomplete: "email" %>
        </div>

        <div class="field">
          <%= f.label :password, "Password (6 characters or more)" %><br />
          <%= f.password_field :password, id: "user_password", autocomplete: "new-password", minlength: 6  %>
        </div>

        <div class="field">
          <%= f.label :password_confirmation, "Password confirmation" %><br />
          <%= f.password_field :password_confirmation, id: "user_password_confirmation", autocomplete: "new-password", minlength: 6 %>
        </div>

        <div class="field">
          <%= f.label :profile, "Profile" %><br />
          <%= f.text_area :profile, class: :form__text, id: "user_profile" %>
        </div>

        <div class="actions">
          <%= f.submit "Sign up", class: :form__btn %>
        </div>

      <% end %>
    </div>
  </div>
</div>

<%= render "devise/shared/links" %>
