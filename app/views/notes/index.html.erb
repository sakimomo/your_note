<main class="main">
  <div class="inner">

    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは、 
        <%= link_to "#{current_user.name}", root_path, class: :greeting__link%>
        さん
      </div> 
      <% else%>
        <img src="<%= image_path('inu.gif') %>" alt="Animated Image" class="inu">
    <% end%>

    <div class="card__wrapper">
      <%#= render partial: 'note', collection: @notes %>
    </div>
  </div>
</main>
