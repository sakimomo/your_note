<main class="main">
  <div class="inner">

    <% if user_signed_in? %>
      <div class="greeting">
        こんにちは、 
        <%= link_to "#{current_user.name}", root_path, class: :greeting__link%>
        さん
        </div>
        <div class="card__wrapper">
        <%= render partial: 'note', collection: @notes %>
        </div> 
      <% else%>
        <div class="greeting">
        Hi, there! Sign up to see photos from your friends ☺︎
        </div>
        <img src="<%= image_path('inu.gif') %>" alt="Animated Image" class="inu">
    <% end%>

  </div>
</main>
